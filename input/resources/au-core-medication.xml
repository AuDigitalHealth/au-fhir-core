<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="au-core-medication"/>
  <extension url="http://hl7.org/fhir/StructureDefinition/structuredefinition-fmm">
    <valueInteger value="0"/> 
  </extension>
  <url value="http://hl7.org.au/fhir/core/StructureDefinition/au-core-medication"/>
  <version value="1.0.0"/>
  <name value="ADHAMedicationCore"/>
  <title value="ADHA Core Medication"/>
  <status value="active"/>
  <experimental value="false"/>
  <publisher value="HL7 Australia Medications Working Group"/>
  <contact>
    <telecom>
      <system value="url" />
      <value value="http://hl7.com.au" />
      <use value="work" />
    </telecom>
  </contact>
  <description value="TBD"/>
  <copyright value="HL7 AustraliaÂ© 2018+; Licensed Under Creative Commons No Rights Reserved." />
  <fhirVersion value="4.0.1"/>
  <kind value="resource"/>
  <abstract value="false"/>
  <type value="Medication"/>
  <baseDefinition value="http://hl7.org.au/fhir/StructureDefinition/au-medication"/>
  <derivation value="constraint"/>
  <differential>
    <element id="Medication">
      <path value="Medication"/>
      <constraint>
        <key value="au-core-med-01"/>
        <severity value="error"/>
        <human
          value="If present, a manufacturer shall at least have a reference, an identifier or a display"/>
        <expression
          value="manufacturer.exists() implies manufacturer.all($this.reference.exists() or $this.identifier.exists() or $this.display.exists())"/>
        <xpath value="not(exists(f:manufacturer)) or exists(f:manufacturer/f:reference) or exists(f:manufacturer/f:identifier) or exists(f:manufacturer/f:display)"/>
        <source
          value="http://hl7.org.au/fhir/core/StructureDefinition/au-core-medication"/>
      </constraint>
    </element>
    <element id="Medication.extension">
      <path value="Medication.extension"/>
      <slicing>
        <discriminator>
          <type value="value"/>
          <path value="url"/>
        </discriminator>
        <rules value="open"/>
      </slicing>
    </element>
    <element id="Medication.extension:brandName">
      <path value="Medication.extension"/>
      <sliceName value="brandName"/>
      <short value="Medication brand name"/>
      <max value="1"/>
      <type>
        <code value="Extension"/>
        <profile value="http://hl7.org.au/fhir/StructureDefinition/medication-brand-name"/>
      </type>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.extension:genericName">
      <path value="Medication.extension"/>
      <sliceName value="genericName"/>
      <short value="Medication generic drug name"/>
      <max value="1"/>
      <type>
        <code value="Extension"/>
        <profile value="http://hl7.org.au/fhir/StructureDefinition/medication-generic-name"/>
      </type>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.code">
      <path value="Medication.code"/>
      <min value="1"/>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.code.coding">
      <path value="Medication.code.coding"/>
      <slicing>
        <discriminator>
          <type value="value"/>
          <path value="system"/>
        </discriminator>
        <rules value="open"/>
      </slicing>
    </element>
    <element id="Medication.code.coding:pbs">
      <path value="Medication.code.coding"/>
      <sliceName value="pbs"/>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.code.coding:amt">
      <path value="Medication.code.coding"/>
      <sliceName value="amt"/>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.manufacturer">
      <path value="Medication.manufacturer"/>
      <type>
        <code value="Reference"/>
        <targetProfile
          value="http://hl7.org.au/fhir/core/StructureDefinition/dh-organization-core-1"
        />
      </type>
      <condition value="au-core-med-01"/>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.form">
      <path value="Medication.form"/>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.amount">
      <path value="Medication.amount"/>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.ingredient">
      <path value="Medication.ingredient"/>
      <constraint>
        <key value="au-core-med-02"/>
        <severity value="error"/>
        <human value="If present, an item reference shall at least have a reference or a display"/>
        <expression
          value="itemReference.exists() implies itemReference.all($this.reference.exists() or $this.display.exists())"/>
        <source
          value="http://hl7.org.au/fhir/core/StructureDefinition/au-core-medication"/>
      </constraint>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.ingredient.item[x]">
      <path value="Medication.ingredient.item[x]"/>
      <mustSupport value="true"/>
      <type>
        <code value="CodeableConcept"/>
      </type>
      <type>
        <code value="Reference"/>
        <targetProfile
          value="http://hl7.org.au/fhir/core/StructureDefinition/au-core-substance"/>
        <targetProfile
          value="http://hl7.org.au/fhir/core/StructureDefinition/au-core-medication"/>
      </type>
      <condition value="au-core-med-02"/>
    </element>
    <element id="Medication.ingredient.isActive">
      <path value="Medication.ingredient.isActive"/>
      <mustSupport value="true"/>
    </element>
    <element id="Medication.ingredient.strength">
      <path value="Medication.ingredient.strength"/>
      <mustSupport value="true"/>
    </element>
  </differential>
</StructureDefinition>
